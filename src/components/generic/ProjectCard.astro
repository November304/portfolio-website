---
import { Image } from 'astro:assets';
interface Technology {
    name: string;
    iconUrl: string;
    color: string;
}
interface Props {
    title: string;
    description: string;
    link?: string;
    technologies: Technology[];
    tags: string[];
}

const { title,description, link,technologies, tags } = Astro.props;
---
<div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="text-2xl font-semibold mb-4">{title}</h3>
    <div class="text-sm text-gray-500 mb-4">
        {technologies.map((tech, index) => (
            <span class="inline-flex items-center gap-x-2 rounded-full text-xs dark:text-white text-black py-0.5 px-1 mr-2" style={`background-color: ${tech.color};`}>                
            <Image src={tech.iconUrl} alt={tech.name} class="w-5 h-5" width={32} height={32}/>
                <span class="mr-2">{tech.name}</span>
            </span>
        ))}
    </div>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex space-x-2 mb-4">
        {tags.map((tag) => (
            <span class="bg-gray-100 px-2 py-1 rounded text-sm">
                {tag}
            </span>
        ))}
    </div>
    <a 
        href={link ?? "#"} 
        class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition"
    >
        Voir le Projet
    </a>
</div>
