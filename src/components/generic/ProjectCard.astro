---
interface Props {
    title: string;
    description: string;
    link?: string;
}

const { title, description, link = "#" } = Astro.props;
---
<div class="bg-white p-6 rounded-lg shadow-md">
    <h3 class="text-2xl font-semibold mb-4">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <a href={link} class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
        Voir le Projet
    </a>
</div>