---
// src/components/sections/Tools.astro
const tools = [
    { name: "JavaScript", icon: "💻" },
    { name: "React", icon: "⚛️" },
    { name: "Astro", icon: "🚀" },
    { name: "Tailwind", icon: "🎨" },
    { name: "Node.js", icon: "🟢" }
];
---
<section id="tools" class="bg-gray-100 py-20">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Mes Outils</h2>
        <div class="grid md:grid-cols-5 gap-6 max-w-4xl mx-auto">
            {tools.map((tool) => (
                <div class="bg-white p-6 rounded-lg shadow-md text-center">
                    <div class="text-4xl mb-4">{tool.icon}</div>
                    <h3 class="text-xl font-semibold">{tool.name}</h3>
                </div>
            ))}
        </div>
    </div>
</section>