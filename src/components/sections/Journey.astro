---
// src/components/sections/Journey.astro
const experiences = [
    {
        title: "Développeur Web",
        company: "Entreprise X",
        period: "2022 - Présent",
        description: "Développement d'applications web modernes et responsives."
    },
    {
        title: "Freelance",
        company: "Projets Indépendants",
        period: "2020 - 2022",
        description: "Création de solutions web sur mesure pour divers clients."
    }
];
---
<section id="journey" class="py-20">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Mon Parcours</h2>
        <div class="max-w-3xl mx-auto space-y-6">
            {experiences.map((exp) => (
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-2xl font-semibold">{exp.title}</h3>
                    <p class="text-gray-600 mb-2">{exp.company} | {exp.period}</p>
                    <p class="text-gray-700">{exp.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>