---
const experiences = [
    {
        title: "Développeur alternant",
        company: "Oria, Toulouse, 31",
        period: "2023 - Présent",
        actions : ["Développement d'applications en C#/VB .NET (.NET Framework, .NET 8, .NET 9)","Création de packages NuGets","Optimisation d'applications existantes","Création d'une implémentation CI/CD sur Gitea"]
    },
    {
        title: "Animateur (BAFA)",
        company: "American Village, Mairie de Toulouse, Météo France",
        period: "2021 - 2023",
        actions : ["Travail d'équipe","Animateur en colonie de vacances (Mairie de Toulouse)","Animateur en centre de loisir (Météo France)","Animateur lors d'un séjour en anglais (American Village)"]
        
    }
];

const formations = [
    {
        title: "Bachelor Universitaire de Technologie (BUT) Informatique",
        school: "Institut Universitaire de Technologie, Blagnac, 31",
        period: "2022 - Présent",
        description: "Parcours A : réalisation d'applications : conception, développement,validation"
    },
    {
        title: "Baccalauréat Général",
        school: "Lycée Emilie de Rodat, Toulouse, 31",
        period: "2019 - 2022",
        description: "Mention très bien, spécialités Numérique et Sciences Informatique et Mathématiques."
    }
];
---
<section id="journey" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Mon Parcours</h2>
        <div class="grid md:grid-cols-2 gap-12">
            <div>
                <h3 class="text-3xl font-semibold mb-8 text-center">
                    Expériences Professionnelles
                </h3>
                <div class="relative">
                    <div class="absolute left-8 top-0 bottom-0 w-1 bg-blue-200"></div>
                    
                    <div class="space-y-6">
                        {experiences.map((exp) => (
                            <div class="relative pl-16">
                                <div class="absolute left-8 top-6 transform -translate-x-1/2 w-6 h-6 rounded-full bg-blue-500 border-4 border-white z-10"></div>
                                
                                <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-500">
                                    <h4 class="text-2xl font-semibold">{exp.title}</h4>
                                    <p class="text-gray-600 mb-2">
                                        {exp.company} | {exp.period}
                                    </p>
                                    <ul class="list-disc list-inside text-gray-700">
                                        {exp.actions.map((action) => (
                                            <li>{action}</li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>

            <div>
                <h3 class="text-3xl font-semibold mb-8 text-center">
                    Formations
                </h3>
                <div class="relative">
                    <div class="absolute left-8 top-0 bottom-0 w-1 bg-green-200"></div>
                    
                    <div class="space-y-6">
                        {formations.map((formation) => (
                            <div class="relative pl-16">
                                <div class="absolute left-8 top-6 transform -translate-x-1/2 w-6 h-6 rounded-full bg-green-500 border-4 border-white z-10"></div>
                                
                                <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
                                    <h4 class="text-2xl font-semibold">{formation.title}</h4>
                                    <p class="text-gray-600 mb-2">
                                        {formation.school} | {formation.period}
                                    </p>
                                    <p class="text-gray-700">{formation.description}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>